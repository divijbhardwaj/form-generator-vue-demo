{
  "compilerOptions": {
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "baseUrl": "./", // all paths are relative to the baseUrl
    "paths": {
      "~/*": [
        "*"
      ], // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`
      "@/*": [
        "*"
      ], // resolve any `@/foo/bar` to `<baseUrl>/foo/bar`
    }
  },
  "exclude": [
    "node_modules"
  ]
}